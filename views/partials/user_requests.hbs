
<div class="row main-row_header">
  <p class="col-md-12">Meine Abwesenheiten</p>
</div>
<div class="row">
  {{# unless leaves}}
  <div class="col-md-12 text-muted">
    Aktuell sind keine Abwesenheiten vorhanden.
  </div>
  {{else}}

  <div class="col-md-12">
    <p class="visible-xs-block"><em class="text-muted">Tabelle horizontal scrollen</em></p>
    <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Typ</th>
          <th>Urlaubstage</th>
          <th>Datum</th>
          <th>Bestätigt von</th>
          <th></th>
          <th><span class="pull-right">Status</span></th>
        </tr>
      </thead>

      <tbody>
      {{# each leaves }}

      <tr>
        <td>{{ this.leave_type.name }}{{#if this.is_pended_revoke_leave}}<br><label class="label label-danger">Zurückgezogen</label>{{/if}}</td>
        <td>{{ this.get_deducted_days_number }}</td>
        <td>Von {{#with this.get_start_leave_day}}{{as_date this.date}}{{/with}} bis {{#with this.get_end_leave_day}}{{as_date this.date}}{{/with}}</td>
        <td>{{#with this.approver}}{{this.full_name}}{{/with}}</td>
        <td>
          {{# if this.is_approved_leave }}
          {{# unless this.is_pended_revoke_leave}}
          <form method="post" action="/requests/revoke/">
            <input type="hidden" value="{{this.id}}" name="request">
            <button type="submit" class="pull-right btn btn-default btn-xs revoke-btn" title="Antrag zurückziehen"><i class="fa fa-trash"></i></button>
          </form>
          {{/unless}}
          {{/if}}
        </td>
        <td><span class="pull-right">{{#if this.is_new_leave }}<label class="label label-warning">Offen</label>{{else}}{{#if this.is_approved_leave}}<label class="label label-primary">Genehmigt</label>{{else}}<label class="label label-default">Abgelehnt</label>{{/if}}{{/if}}</span></td>
      </tr>

      {{/ each }}

      </tbody>
    </table>
    </div>
  </div>
  {{/unless}}
</div>
