
{{> header }}

<h1>Mein Kalendar</h1>

<div class="row">
    <div class="col-md-6 lead">{{logged_user.name}} {{logged_user.lastname}}'s Kalendar f체r {{this_year}}</div>
    <div class="col-md-6">
    </div>
</div>

{{> show_flash_messages }}

<div class="row">&nbsp;</div>

<div class="row main-row_header hidden-xs">
  <div class="col-md-12">Statistiken</div>
</div>

<div class="row hidden-xs">

  <div class="col-md-3 top-leave-type-statistics">
    <dl>
      {{#with current_user }}
      <dt>{{ this.calculate_number_of_days_available_in_allowence ../this_year }}</dt>
      <dd>Urlaubstage 체brig</dd>
      <dd>von {{this.calculate_total_number_of_days_n_allowence ../this_year}} in diesem Jahr</dd>
      {{/with}}
    </dl>
  </div>


  <div class="col-md-3 secondary-leave-type-statistics">
    <dl>
      <dt>Bisher genutzte Urlaubstage</dt>

      {{# if leave_type_statistics }}
        {{# each leave_type_statistics }}
          <dd><em>{{this.leave_type.name}}:</em> <span class="pull-right">{{this.days_taken}}{{# if this.limit}} von {{this.limit}}{{/if}}</span></dd>
        {{/each}}
      {{else}}

        <dd class="text-muted">Bisher keine genehmigten Urlaubstage.</dd>
      {{/if}}
    </dl>
  </div>

  <div class="col-md-3 secondary-leave-type-statistics">
    <dl>
      <dt>Verf체gbare Typen</dt>
        {{~# each full_leave_type_statistics ~}}
          <dd>{{this.leave_type.name ~}}{{~# if this.limit }} (bis zu {{this.limit}} days){{~/if}} </dd>
        {{~/ each}}
    </dl>
  </div>

  <div class="col-md-3 secondary-leave-type-statistics">
    <dl>
      <dt>Info</dt>
      <dd><em>Superviser:</em><span class="pull-right"><a href="mailto:{{superviser.email}}">{{# with superviser }}{{ this.full_name }}{{/with}}</a></span></dd>
      <dd><em>Abteilung:</em> <span class="pull-right"><a href="/calendar/teamview/?department={{ current_user.department.id }}">{{ current_user.department.name }}</a></span></dd>
      <dd><em>Urlaubstage in {{this_year}}:</em><span class="pull-right"> {{#with current_user}}{{ this.calculate_total_number_of_days_n_allowence ../this_year }}{{/with}} Tage</span><dd>
    </dl>
  </div>

</div>

<div class="row">
</div>


<div class="row main-row_header">
  <div class="col-md-12">Kalendar <a href="/calendar/feeds/" data-toggle="tooltip" data-placement="right" title="Exportiere diesen Kalendar zu Google"><span class="fa fa-rss"></span></a></div>
</div>

<div class="row">
  <div class="col-md-2">
    {{#if show_full_year}}
    <a class="btn btn-default" href="/calendar/?year={{previous_year}}{{#if show_full_year}}&show_full_year=1{{/if}}"><span aria-hidden="true" class="fa fa-chevron-left"></span> {{previous_year}} </a>
    {{/if}}
  </div>
  <div class="col-md-8 calendar-section-caption">

    <strong>{{#if show_full_year}}Januar - Dezember {{current_year}}{{else}}Die n채chsten Monate{{/if}}</strong>
    &nbsp;

    {{# unless show_full_year}}
    <a class="btn btn-default" href="/calendar/?show_full_year=1">Mehr... &nbsp;<span class="fa fa-plus"></span></a>
    {{else}}
    <a class="btn btn-default" href="/calendar/">Weniger... &nbsp;<span class="fa fa-minus"></span></a>
    {{/unless}}


  </div>
  <div class="col-md-2">
    {{#if show_full_year}}
    <a class="btn btn-default pull-right" href="/calendar/?year={{next_year}}{{#if show_full_year}}&show_full_year=1{{/if}}">{{next_year}} <span aria-hidden="true" class="fa fa-chevron-right"></span></a>
    {{/if}}
  </div>
</div>

<div class="row">&nbsp;</div>

<div class="row clearfix">

    {{# each calendar}}
    <div class="col-md-3 month_container">
        <table class="calendar_month month_{{ this.month }}">
        <thead>
        <tr>
            <td colspan="14">{{#if ../show_full_year}}{{this.month}}{{else}}{{#with this.moment }}{{this.format 'MMMM, YYYY'}}{{/with}}{{/if}}</td>
        </tr>
        <tr>
            <td colspan="2">M</td>
            <td colspan="2">D</td>
            <td colspan="2">M</td>
            <td colspan="2">D</td>
            <td colspan="2">F</td>
            <td colspan="2">S</td>
            <td colspan="2">S</td>
        </tr>
        </thead>
        <tbody>
        {{#each this.weeks }}
        <tr>
            {{#each this}}
              {{> calendar_cell day = this}}
            {{/each}}
        </tr>
        {{/each}}

        </tbody></table>
    </div>
    {{/each}}

</div>


{{# unless show_full_year}}
  {{> user_requests leaves=current_user.my_leaves }}
{{/unless}}


{{> footer }}
