

{{> header }}

<h1>Allgemein Einstellungen</h1>

<p class="lead">Account Einstellungen</p>

{{> show_flash_messages }}

<div class="row">&nbsp;</div>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Unternehmen
      </div>
      <div class="panel-body">
        <div class="row">

          <div class="col-md-5">
            <form class="form-horizontal" method="POST" action="/settings/company/" id="company_edit_form">
              <div class="form-group">
                <label for="input_company_name" class="col-md-4 control-label">Unternehmensname</label>
                <div class="col-md-8">
                  <input class="form-control" id="input_company_name" placeholder="Unternehmen" value="{{company.name}}" name="name">
                </div>
              </div>
              <div class="form-group">
                <label for="input_country" class="col-md-4 control-label">Land</label>
                <div class="col-md-8">
                  <select class="form-control" id="input_country" name="country">
                    {{#each countries}}
                    <option value="{{@key}}" {{# if_equal @key ../company.country }} selected="selected"{{/if_equal}}>{{this.name}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                  <div class="checkbox">
                    <label for="share-all-absences">
                      <input id="share-all-absences" type="checkbox" name="share_all_absences" {{# if company.share_all_absences }} checked="checked"{{/if}}>Urlaubstage für alle Mitarbeiter sichtbar machen
                    </label>
                    <p>
                      <em>Wenn aktiviert, kann jeder Mitarbeiter unabhängig der Abteilung die Abwesenheit aller anderen Mitarbeiter einsehen.</em>
                    </p>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                  <button type="submit" class="btn btn-success pull-right">Änderungen speichern</button>
                </div>
              </div>
            </form>
          </div>

          <div class="col-md-offset-1 col-md-5">
            <form class="form-horizontal" method="POST" action="/settings/company/export/" id="company_export_form">
              <div class="form-group">
                <label for="input_country" class="col-md-6 control-label">Daten exportieren</label>
                <div class="col-md-6">
                  <button type="submit" class="btn btn-success">Download</button>
                </div>
              </div>
              <div class="form-group">
                <div class="col-md-offset-2">
                  <em>Download company dump file that could be used to restore account on another TimeOff.Management installation</em>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        Feiertage
      </div>
      <div class="panel-body">
        <form id="delete_bankholiday_form" method="post" action="/settings/bankholidays/delete/"></form>
        <form id="update_bankholiday_form" method="post" action="/settings/bankholidays/">

        <div class="row">
          <div class="col-md-6"><label class="control-label">Feiertag</label></div>
          <div class="col-md-3"><label class="control-label">Datum</label></div>
        </div>

        <div class="row">&nbsp;</div>

        {{# unless company.bank_holidays.length }}
        <div class="row">
          <div class="col-md-4">Keine Feiertage definiert.</div>
        </div>
        {{/unless}}

        {{#each company.bank_holidays}}
        <div class="row">

          <div class="col-md-6">
              <input type="text" class="form-control" value="{{name}}" name="name__{{@index}}">
          </div>

          <div class="col-md-3">
            <div class="input-append date">
            <input type="text" class="form-control" value="{{as_date date}}" name="date__{{@index}}" data-date-autoclose="1" data-provide="datepicker" data-date-format="yyyy-mm-dd">
            <span class="add-on"><i class="icon-th"></i></span>
            </div>
          </div>

          <div class="col-md-2">
            <button class="btn btn-default pull-right bankholiday-remove-btn" type="button" value="{{@index}}"><span class="fa fa-remove"></span></button>
          </div>
        </div>

        <div class="row">&nbsp;</div>

        {{/each}}

        <div class="row">&nbsp;</div>

        <div class="row">
          <div class="col-md-12 text-right">
            <button class="btn btn-default" type="button" data-toggle="modal" data-target="#add_new_bank_holiday_modal" id="add_new_bank_holiday_btn">Neuer Feiertag</button>
            <button type="submit" class="btn btn-success">Änderung speichern</button>
          </div>
        </div>

        </form>
      </div>
    </div>
  </div>


  <div class="col-md-6 setting-general-2nd-column">

    <div class="panel panel-default">

      <div class="panel-heading">
        Abwesenheitsgründe
      </div>

      <div class="panel-body">

        <div class="row">
          <div class="col-md-6"><label class="control-label">Bezeichnung</label></div>
          <div class="col-md-offset-3 col-md-2"><label class="control-label">Limit</label></div>
        </div>

        <div class="row">&nbsp;</div>

        <form id="delete_leavetype_form" method="post" action="/settings/leavetypes/delete/"></form>
        <form id="leave_type_edit_form" method="post" action="/settings/leavetypes/">

        {{# unless company.leave_types.length }}
        <div class="row">
          <div class="col-md-4">Keine Abwesenheitsgründe definiert.</div>
        </div>
        {{/unless}}


        {{#each company.leave_types}}
        <div class="row">
          <div class="col-md-5">
            <input type="text" class="form-control" value="{{name}}" name="name__{{@index}}">
          </div>
          <div class="col-md-4">
            <input name="use_allowance__{{@index}}" id="use_allowance__{{@index}}" type="checkbox" {{#if use_allowance}}checked="checked"{{/if}}>
            <label for="use_allowance__{{@index}}" class="control-label">Urlaubstage?</label>
          </div>
          <div class="col-md-2">
            <input type="number" class="form-control" value="{{limit}}" name="limit__{{@index}}">
          </div>
          <div class="col-md-1">
            <button class="btn btn-default pull-right leavetype-remove-btn" value="{{@index}}"><span class="fa fa-remove"></span></button>
          </div>
        </div>

        <div class="row">&nbsp;</div>

        {{/each}}

        <div class="row">&nbsp;</div>

        <div class="row">
          <div class="col-md-12 text-right">
            <button class="btn btn-default" data-toggle="modal" data-target="#add_new_leave_type_modal" type="button" id="add_new_leave_type_btn">Neuer Abwesenheitsgrund</button>
            <button type="submit" class="btn btn-success">Änderungen speichern</button>
          </div>
        </div>
        </form>
      </div>
    </div>
  </div>

</div>


{{> add_new_bank_holiday_modal
  container_id='add_new_bank_holiday_modal'
  form_action='/settings/bankholidays/'
}}


{{> add_new_leave_type_modal
  container_id='add_new_leave_type_modal'
  form_action='/settings/leavetypes/'
}}

{{> footer }}
