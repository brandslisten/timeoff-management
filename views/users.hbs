
{{> header }}

<h1>Mitarbeiter</h1>

{{> show_flash_messages }}

<div class="row">
    <div class="col-md-3 lead">{{company.name}}'s Mitarbeiter</div>
    <form id="add_new_user_frm" method="get" action="/users/add/">
        <div class="col-md-3 col-md-offset-6">
        <button type="submit" class="pull-right btn btn-info" id="add_new_department_btn">Mitarbeiter hinzuf√ºgen</button>
        </div>
    </form>
</div>

<div class="row">&nbsp;</div>

<div class="row">
  <div class="content">
    <div class="col-md-3">
      <table class="table table-hover all-departments">
        <thead>
          <tr>
            <th>Abteilungen</th>
          </tr>
        </thead>
        <tbody>
          <tr><td><a href="/users/">Alle</a></td></tr>
          {{#each company.departments}}
          <tr><td><a href="/users/?department={{this.id}}">{{this.name}}</a></td></tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <div class="col-md-9">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Abteilung</th>
            <th>Administrator?</th>
            <th>Genutzte Urlaubstage</th>
          </tr>
        </thead>
        <tbody>
          {{# each users}}
          <tr>
            <td class="user-link-cell"><a href="/users/edit/{{this.id}}/">{{this.full_name}}</a></td>
            <td class="user_department">{{this.department.name}}</td>
            <td>{{# if this.admin }}Yes{{else}}{{/if}}</td>
            <td>{{this.calculate_number_of_days_taken_from_allowence}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="row">&nbsp;</div>

{{> footer }}
